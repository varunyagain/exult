rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Books collection
    match /books/{bookId} {
      // Anyone can read books
      allow read: if true;
      // Allow create for seeding (TODO: tighten to require auth after initial setup)
      allow create: if true;
      // Only admins or book owners can update/delete
      allow update, delete: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         resource.data.ownerId == request.auth.uid);
    }

    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions, admins can read all
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Users can create their own subscriptions
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.userId;
      // Users can update (cancel) their own subscriptions, admins can update any
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Only admins can delete subscriptions
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Loans collection
    match /loans/{loanId} {
      // Users can read their own loans (by borrowerId), admins can read all
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.borrowerId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Authenticated users can create loans
      allow create: if request.auth != null;
      // Users can update their own loans, admins can update any
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.borrowerId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow delete: if false;
    }

    // Mail collection (used by Firebase Trigger Email extension)
    match /mail/{mailId} {
      allow create: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow read, update, delete: if false;
    }

    // Contact submissions
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
