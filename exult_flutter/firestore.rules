rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: check if the authenticated user is an admin.
    // Uses exists() guard so get() never runs on a missing document.
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
      allow delete: if false;
    }

    // Books collection
    match /books/{bookId} {
      // Anyone can read books
      allow read: if true;
      // Authenticated users can create books
      allow create: if request.auth != null;
      // Authenticated users can update books (borrow/return changes availableCopies/status)
      allow update: if request.auth != null;
      // Admins can delete any book; users can delete their own pending books
      allow delete: if isAdmin() ||
        (request.auth != null && resource.data.ownerId == request.auth.uid && resource.data.status == 'pending');
    }

    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Admins can read all subscriptions
      allow read: if isAdmin();
      // Users can read their own subscriptions
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Users can create their own subscriptions, admins can create for any user
      allow create: if request.auth != null &&
        (request.auth.uid == request.resource.data.userId || isAdmin());
      // Users can update (cancel) their own subscriptions, admins can update any
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin());
      // Only admins can delete subscriptions
      allow delete: if isAdmin();
    }

    // Loans collection
    match /loans/{loanId} {
      // Admins can read all loans (no resource.data check â†’ allows unfiltered list queries)
      allow read: if isAdmin();
      // Users can read their own loans
      allow read: if request.auth != null && request.auth.uid == resource.data.borrowerId;
      // Authenticated users can create loans
      allow create: if request.auth != null;
      // Users can update their own loans, admins can update any
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.borrowerId || isAdmin());
      allow delete: if false;
    }

    // Mail collection (used by Firebase Trigger Email extension)
    match /mail/{mailId} {
      allow create: if isAdmin();
      allow read, update, delete: if false;
    }

    // Contact submissions
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
